<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/tiny_margin"
    android:id="@+id/update_ep_main_view"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="@dimen/podcast_item_corner_radius"
    card_view:cardElevation="@dimen/card_elevation"
    >


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/episode_main_view_layout"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ep_img"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/display_episode_podcast_img_content"
            android:layout_margin="@dimen/tiny_margin"
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:layout_height="@dimen/img_playlis_small_size"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight=".6"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:id="@+id/episode_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:maxLines="2"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="@dimen/tiny_margin"
                android:scrollHorizontally="false"
                />

            <TextView
                android:id="@+id/episode_date"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/tiny_margin"
                />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight=".1"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/remove_item_img"
                android:contentDescription="@string/btn_remove_item_from_playlist"
                android:src="@mipmap/ic_playlist_remove"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/small_margin"
                />

        </LinearLayout>



    </LinearLayout>
</android.support.v7.widget.CardView>