
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/widget_img"
            android:layout_width="@dimen/widget_img_size"
            android:layout_height="@dimen/widget_img_size"/>

        <ImageButton
            android:id="@+id/widget_prev_btn"
            android:src="@mipmap/ic_media_skip_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <ImageButton
            android:id="@+id/widget_play_pause_btn"
            android:src="@mipmap/ic_media_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/widget_next_btn"
            android:src="@mipmap/ic_media_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

