<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="@dimen/podcast_item_corner_radius"
    card_view:cardElevation="@dimen/card_elevation"
    android:id="@+id/download_item_main_layout"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/download_ep_img"
            android:layout_margin="@dimen/tiny_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/download_ep_title"
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/tiny_margin"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/download_remove_img"
            android:src="@mipmap/ic_remove"
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/tiny_margin"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</android.support.v7.widget.CardView>