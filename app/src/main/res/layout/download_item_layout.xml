<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    card_view:cardCornerRadius="@dimen/podcast_item_corner_radius"
    android:layout_margin="@dimen/tiny_margin"
    card_view:cardElevation="@dimen/card_elevation"
    android:id="@+id/download_item_main_layout"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/download_ep_img"
            android:layout_margin="@dimen/tiny_margin"
            android:layout_width="@dimen/download_image_size"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/download_image_size"/>

        <TextView
            android:id="@+id/download_ep_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/download_ep_img"
            android:layout_toRightOf="@id/download_ep_img"
            android:layout_toStartOf="@id/download_remove_img"
            android:layout_toLeftOf="@id/download_remove_img"
            android:layout_margin="@dimen/tiny_margin"
            android:layout_centerVertical="true"
            tools:text="John Doe and Band and TOM amd TONY abcsedfgefefefd"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_gravity="fill_horizontal|center_vertical"
            />

        <ImageView
            android:id="@+id/download_remove_img"
            android:src="@mipmap/ic_remove"
            android:layout_width="@dimen/remove_ic_size"
            android:layout_margin="@dimen/tiny_margin"
            android:layout_gravity="end|center_vertical"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/remove_ic_size"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>